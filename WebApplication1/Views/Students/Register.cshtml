@model WebApplication1.Models.CourseHasStudent

@{
    ViewData["Title"] = "Δήλωση Μαθήματος";
}

<h1>Δήλωση Μαθήματος</h1>


<hr />


<div class="row">
    <div class="col-md-4">
        <form asp-action="Register">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="IdCourse" class="control-label"></label>
                <select asp-for="IdCourse" class="form-control" asp-items="ViewBag.IdCourse"></select>
                
            </div>
            <div class="form-group">
                <label asp-for="RegistrationNumber" class="control-label">Αριθμός Μητρώου</label>
                <select asp-for="RegistrationNumber" class="form-control" asp-items="ViewBag.RegistrationNumber"></select>
                <span asp-validation-for="RegistrationNumber" class="text-danger"></span>
            </div>

            
            

            <input type="hidden" asp-for="Pk" />
            <div class="form-group">
                <input type="submit" value="Προσθήκη μαθήματος" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Registeredlessons">Back to Your Lessons</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }
