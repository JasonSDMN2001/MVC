@model IEnumerable<WebApplication1.Models.Student>

@{
    ViewData["Title"] = "Students";
}

<h1>Προβολή Φοιτητών</h1>


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Surname)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Department)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Username)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Surname)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Department)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UsernameNavigation.Username)
                </td>
                <td>
                    <a asp-action="Registeredlessons" asp-route-id="@item.RegistrationNumber">Προβολή εγγεγραμμένων μαθημάτων</a>
                </td>
            </tr>
        }
    </tbody>
</table>
