@model IEnumerable<WebApplication1.Models.Course>

@{
    ViewData["Title"] = "Index";
}

<h1>Προβολή Μαθημάτων</h1>


<table class="table">
    <thead>
        <tr>
            <th>
                 Μάθημα
            </th>
            <th>
                Εξάμηνο
            </th>
            <th>
                Υπεύθυνος Καθηγητής
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CourseTitle)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CourseSemaster)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AfmNavigation.Fullname)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdCourse">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.IdCourse">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.IdCourse">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
