@model WebApplication1.Models.Course

@{
    ViewData["Title"] = "Anathesi";
}

<h1>Ανάθεση Μαθήματος</h1>

<h4>Μάθημα</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Anathesi">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdCourse" />
            <div class="form-group">
                <label asp-for="CourseTitle" class="control-label">Τίτλος Μαθήματος</label>
                <input asp-for="CourseTitle" class="form-control" />
                <span asp-validation-for="CourseTitle" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CourseSemaster" class="control-label">Εξάμηνο</label>
                <input asp-for="CourseSemaster" class="form-control" />
                <span asp-validation-for="CourseSemaster" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Afm" class="control-label">ΑΦΜ Καθηγητή</label>
                <select asp-for="Afm" class="form-control" asp-items="ViewBag.Afm"></select>
                <span asp-validation-for="Afm" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Ανάθεση" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index2">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

